{
    "steps": [
        {
            "rows": [
                {
                    "hint": "Supported file types: image/* (jpg, png, jpeg) - Max size: 2MB",
                    "label": "Cover",
                    "fields": [
                        {
                            "name": "cover",
                            "type": "fileUpload",
                            "accept": "image/*",
                            "multiple": false,
                            "required": "You must upload image cover"
                        }
                    ],
                    "labelAlign": "start",
                    "labelGutter": true
                },
                {
                    "hint": "Difference between Centerialized and Permanent storage",
                    "label": "Cover Storage Method",
                    "fields": [
                        {
                            "name": "storageOption",
                            "type": "radio",
                            "options": [
                                {
                                    "label": "Centralized Storage (AWS S3)",
                                    "value": "s3"
                                },
                                {
                                    "label": "Permanent Storage (Arweave)",
                                    "value": "arweave"
                                }
                            ],
                            "stacked": false,
                            "defaultValue": "s3"
                        }
                    ],
                    "divider": "Divider"
                }
            ],
            "title": "Upload assets"
        },
        {
            "rows": [
                {
                    "label": "Name",
                    "fields": [
                        {
                            "name": "title",
                            "required": "Name is required",
                            "placeholder": "Name of the digital merchandise"
                        }
                    ]
                },
                {
                    "label": "Description",
                    "fields": [
                        {
                            "name": "description",
                            "placeholder": "Merchandise description"
                        }
                    ]
                },
                {
                  "label": "Creator",
                  "fields": [
                      {
                          "defaultValue": "me",
                          "name": "creator",
                          "options": [
                              { "label": "Me", "value": "me" }
                          ],
                          "type": "checkbox"
                      },
                      {
                          "conditions": ["creator:me:not"],
                          "name": "creatorCustom",
                          "placeholder": "Add other merchandise creators"
                      }
                  ],
                  "divider": true
                },
                {
                    "label": "Artist",
                    "fields": [
                        {
                            "name": "artist",
                            "placeholder": "Artist name"
                        }
                    ],
                    "divider": true
                },
                {
                    "label": "Merchandise Type",
                    "fields": [
                        {
                            "name": "type",
                            "type": "select",
                            "options": [
                                {
                                    "label": "Clothes Vouchers",
                                    "value": "clothesVoucher"
                                },
                                {
                                    "label": "Gift Vouchers",
                                    "value": "giftVoucher"
                                },
                                {
                                    "label": "Event Vouchers",
                                    "value": "eventVoucher"
                                },
                                {
                                    "label": "Lottery Events",
                                    "value": "lotteryEvent"
                                },
                                {
                                    "label": "Personalized Cover Labels",
                                    "value": "personalizedCoverLabel"
                                },
                                {
                                    "label": "Other",
                                    "value": "other"
                                }
                            ],
                            "placeholder": "Merchandise Type"
                        },
                        {
                            "name": "otherType",
                            "conditions": [
                                "type:other"
                            ],
                            "placeholder": "Please enter any other merchandise type"
                        }
                    ]
                },
                {
                    "hint": "Value of this field would be visible only to owners",
                    "label": "Unlockable content",
                    "fields": [
                        {
                            "name": "secretPhrase",
                            "placeholder": "Unlockable content"
                        }
                    ],
                    "divider": true
                },
                {
                    "hint": "Unique: 1, Limited: 2-100, Unlimited: > 100",
                    "label": "Amount",
                    "fields": [
                        {
                            "name": "amountType",
                            "type": "radio",
                            "options": [
                                {
                                    "label": "Unique",
                                    "value": "unique"
                                },
                                {
                                    "label": "Limited",
                                    "value": "limited"
                                },
                                {
                                    "label": "Unlimited",
                                    "value": "unlimited"
                                }
                            ],
                            "defaultValue": "unique"
                        },
                        {
                            "min": 2,
                            "name": "amount",
                            "type": "number",
                            "required": "Amount is required",
                            "conditions": [
                                "amountType:limited",
                                "amountType:unlimited"
                            ],
                            "placeholder": "Amount (2-100)"
                        }
                    ],
                    "divider": true
                },
                {
                  "label": "Enable bidding?",
                  "fields": [
                      {
                          "name": "biddingEnabled",
                          "type": "toggleSwitch"
                      }
                  ]
              },
              {
                  "conditions": ["biddingEnabled:true:not"],
                  "label": "Price",
                  "fields": [
                      {
                          "inputProps": {
                              "placeholder": "Price"
                          },
                          "min": "0.01",
                          "name": "price",
                          "type": "price",
                          "required": "Price is required",
                          "currencies": [
                              {
                                  "sign": "€",
                                  "label": "EUR (€)",
                                  "value": "eur"
                              }
                          ]
                      }
                  ],
                  "divider": true
              },
              {
                  "conditions": ["biddingEnabled:true"],
                  "label": "Starting Price",
                  "fields": [
                      {
                          "inputProps": {
                              "placeholder": "Starting Price"
                          },
                          "min": "0.01",
                          "name": "startingPrice",
                          "type": "price",
                          "required": "Starting Price is required",
                          "currencies": [
                              {
                                  "sign": "€",
                                  "label": "EUR (€)",
                                  "value": "eur"
                              }
                          ]
                      }
                  ],
                  "divider": true
              },
              {
                  "hint": "License fee",
                  "label": "License fee",
                  "fields": [
                      {
                          "defaultValue": false,
                          "name": "feeEnabled",
                          "type": "toggleSwitch"
                      }
                  ]
              },
              {
                  "conditions": ["feeEnabled:true"],
                  "label": "Fee percentage",
                  "fields": [
                      {
                          "min": "1",
                          "max": "99",
                          "name": "fee",
                          "type": "number",
                          "placeholder": "Fee percentage (1-99)",
                          "required": "Fee percentage is required"
                      }
                  ]
              },
              {
                  "conditions": ["feeEnabled:true"],
                  "label": "Fee recipient address",
                  "fields": [
                      {
                          "defaultValue": "yes",
                          "name": "defaultFeeAddress",
                          "options": [
                              { "label": "Use my default address stored in the platform", "value": "yes" }
                          ],
                          "type": "checkbox"
                      },
                      {
                          "conditions": ["defaultFeeAddress:yes:not"],
                          "name": "feeAddress",
                          "placeholder": "Fee recipient address",
                          "required": "Fee recipient address is required"
                      }
                  ],
                  "divider": true
              }
            ],
            "title": "Specify meta-data"
        },
        {
            "rows": [
                {
                    "fields": [
                        {
                            "name": "terms",
                            "type": "checkbox",
                            "options": [
                                {
                                    "label": "I have read and accept the terms of usage.",
                                    "value": true
                                }
                            ],
                            "required": "You must accept terms of usage"
                        }
                    ]
                },
                {
                    "fields": [
                        {
                            "name": "owner",
                            "type": "checkbox",
                            "options": [
                                {
                                    "label": "I am the owner of this merchandise.",
                                    "value": true
                                }
                            ],
                            "required": "You must be the merchandise owner"
                        }
                    ]
                }
            ],
            "title": "Review and finalize"
        }
    ]
  }