{
    "steps": [
        {
            "rows": [
                {
                    "hint": "Supported file types: image/* (jpg, png, jpeg) - Max size: 2MB",
                    "label": "Cover",
                    "fields": [
                        {
                            "name": "cover",
                            "type": "fileUpload",
                            "accept": "image/*",
                            "multiple": false,
                            "required": "You must upload image cover"
                        }
                    ],
                    "labelAlign": "start",
                    "labelGutter": true
                },
                {
                    "hint": "Difference between Centerialized and Permanent storage",
                    "label": "Cover Storage Method",
                    "fields": [
                        {
                            "name": "storageOption",
                            "type": "radio",
                            "options": [
                                {
                                    "label": "Centralized Storage (AWS S3)",
                                    "value": "s3"
                                },
                                {
                                    "label": "Permanent Storage (Arweave)",
                                    "value": "arweave"
                                }
                            ],
                            "stacked": false,
                            "defaultValue": "s3"
                        }
                    ],
                    "divider": "Divider"
                },
                {
                    "hint": "",
                    "label": "Image (High Resolution) Same as Cover?",
                    "fields": [
                        {
                            "name": "assetSameAsCover",
                            "type": "toggleSwitch"
                        }
                    ]
                },
                {
                    "conditions": [
                        "assetSameAsCover:true:not"
                    ],
                    "hint": "Supported file types: image/* (jpg, png, jpeg) - Max size: 20MB",
                    "label": "Image (High Resolution)",
                    "fields": [
                        {
                            "name": "image",
                            "type": "fileUpload",
                            "accept": "image/*",
                            "multiple": false,
                            "required": "You must upload image"
                        }
                    ],
                    "labelAlign": "start",
                    "labelGutter": true
                },
                {
                    "conditions": [
                        "assetSameAsCover:true:not"
                    ],
                    "message": "Do you want to store also your media assets fully decentralized forever? Drop us a mail at hello@licenserocks.de"
                },
                {
                    "hint": "Value of this field would be visible only to owners",
                    "label": "Unlockable bonus content",
                    "fields": [
                        {
                            "name": "secretPhrase",
                            "placeholder": "Unlockable content"
                        }
                    ]
                }
            ],
            "title": "Upload assets"
        },
        {
            "rows": [
                {
                    "label": "Title",
                    "fields": [
                        {
                            "name": "title",
                            "required": "Name is required",
                            "placeholder": "Name of your listed image"
                        }
                    ]
                },
                {
                    "label": "Description",
                    "fields": [
                        {
                            "name": "description",
                            "placeholder": "Image description"
                        }
                    ],
                    "divider": true
                },
                {
                    "hint": "Unique: 1, Limited: 2-100",
                    "label": "Amount",
                    "fields": [
                        {
                            "name": "amountType",
                            "type": "radio",
                            "options": [
                                {
                                    "label": "Unique",
                                    "value": "unique"
                                },
                                {
                                    "label": "Limited",
                                    "value": "limited"
                                }
                            ],
                            "defaultValue": "unique"
                        },
                        {
                            "min": 2,
                            "name": "amount",
                            "type": "number",
                            "required": "Amount is required",
                            "conditions": [
                                "amountType:limited"
                            ],
                            "placeholder": "Amount (2-100)"
                        }
                    ],
                    "divider": true
                },
                {
                    "label": "Enable bidding?",
                    "fields": [
                        {
                            "name": "biddingEnabled",
                            "type": "toggleSwitch"
                        }
                    ]
                },
                {
                    "conditions": [
                        "biddingEnabled:true:not"
                    ],
                    "label": "Price",
                    "fields": [
                        {
                            "inputProps": {
                                "placeholder": "Price"
                            },
                            "min": "0.01",
                            "name": "price",
                            "type": "price",
                            "required": "Price is required",
                            "currencies": [
                                {
                                    "sign": "€",
                                    "label": "EUR (€)",
                                    "value": "eur"
                                }
                            ]
                        }
                    ],
                    "divider": true
                },
                {
                    "conditions": [
                        "biddingEnabled:true"
                    ],
                    "label": "Starting Price",
                    "fields": [
                        {
                            "inputProps": {
                                "placeholder": "Starting Price"
                            },
                            "min": "0.01",
                            "name": "startingPrice",
                            "type": "price",
                            "currencies": [
                                {
                                    "sign": "€",
                                    "label": "EUR (€)",
                                    "value": "eur"
                                }
                            ]
                        }
                    ],
                    "divider": true
                },
                {
                    "hint": "Creator fee",
                    "label": "Creator fee",
                    "fields": [
                        {
                            "name": "creatorFeeEnabled",
                            "type": "toggleSwitch"
                        }
                    ]
                },
                {
                    "conditions": [
                        "creatorFeeEnabled:true"
                    ],
                    "label": "Creator fee amount",
                    "fields": [
                        {
                            "name": "creatorFeeAmountType",
                            "type": "radio",
                            "options": [
                                {
                                    "label": "Fixed",
                                    "value": "FIXED"
                                },
                                {
                                    "label": "Percentage",
                                    "value": "PERCENTAGE"
                                }
                            ],
                            "stacked": false,
                            "required": "Fee amount is required"
                        }
                    ]
                },
                {
                    "conditions": [
                        "creatorFeeAmountType"
                    ],
                    "label": " ",
                    "fields": [
                        {
                            "conditions": [
                                "creatorFeeAmountType:PERCENTAGE"
                            ],
                            "min": "1",
                            "max": "99",
                            "name": "creatorFeePercentage",
                            "type": "number",
                            "placeholder": "Fee percentage (1-99)",
                            "required": "Fee percentage is required"
                        },
                        {
                            "conditions": [
                                "creatorFeeAmountType:FIXED"
                            ],
                            "min": "1",
                            "name": "creatorFeeAmount",
                            "type": "price",
                            "placeholder": "Fee amount (EUR)",
                            "required": "Fee amount is required"
                        }
                    ]
                },
                {
                    "conditions": [
                        "creatorFeeEnabled:true"
                    ],
                    "label": "Creator fee recipient address",
                    "fields": [
                        {
                            "name": "creatorFeeAddress",
                            "placeholder": "Fee recipient address",
                            "required": "Fee recipient address is required"
                        }
                    ],
                    "divider": true
                },
                {
                    "hint": "Reseller fee",
                    "label": "Reseller fee",
                    "fields": [
                        {
                            "name": "resellerFeeEnabled",
                            "type": "toggleSwitch"
                        }
                    ]
                },
                {
                    "conditions": [
                        "resellerFeeEnabled:true"
                    ],
                    "label": "Reseller fee amount",
                    "fields": [
                        {
                            "name": "resellerFeeAmountType",
                            "type": "radio",
                            "options": [
                                {
                                    "label": "Fixed",
                                    "value": "FIXED"
                                },
                                {
                                    "label": "Percentage",
                                    "value": "PERCENTAGE"
                                }
                            ],
                            "stacked": false,
                            "required": "Fee amount is required"
                        }
                    ]
                },
                {
                    "conditions": [
                        "resellerFeeAmountType"
                    ],
                    "label": " ",
                    "fields": [
                        {
                            "conditions": [
                                "resellerFeeAmountType:PERCENTAGE"
                            ],
                            "min": "1",
                            "max": "99",
                            "name": "resellerFeePercentage",
                            "type": "number",
                            "placeholder": "Fee percentage (1-99)",
                            "required": "Fee percentage is required"
                        },
                        {
                            "conditions": [
                                "resellerFeeAmountType:FIXED"
                            ],
                            "min": "1",
                            "name": "resellerFeeAmount",
                            "type": "price",
                            "placeholder": "Fee amount (EUR)",
                            "required": "Fee amount is required"
                        }
                    ]
                }
            ],
            "title": "Meta-data and Price"
        },
        {
            "recurring": true,
            "name": "copyrights",
            "rows": [
                {
                    "label": "Name",
                    "fields": [
                        {
                            "name": "feeName",
                            "placeholder": "Copyright holder name",
                            "required": "Fee name is required"
                        }
                    ]
                },
                {
                    "label": "Share amount",
                    "fields": [
                        {
                            "name": "feeAmountType",
                            "type": "radio",
                            "options": [
                                {
                                    "label": "Fixed",
                                    "value": "FIXED"
                                },
                                {
                                    "label": "Percentage",
                                    "value": "PERCENTAGE"
                                }
                            ],
                            "stacked": false,
                            "required": "Fee amount is required"
                        }
                    ]
                },
                {
                    "conditions": [
                        "feeAmountType"
                    ],
                    "label": " ",
                    "fields": [
                        {
                            "conditions": [
                                "feeAmountType:PERCENTAGE"
                            ],
                            "min": "1",
                            "max": "99",
                            "name": "feePercentage",
                            "type": "number",
                            "placeholder": "Fee percentage (1-99)",
                            "required": "Fee percentage is required"
                        },
                        {
                            "conditions": [
                                "feeAmountType:FIXED"
                            ],
                            "min": "1",
                            "name": "feeAmount",
                            "type": "price",
                            "placeholder": "Fee amount (EUR)",
                            "required": "Fee amount is required"
                        }
                    ]
                },
                {
                    "label": "Share recipient",
                    "fields": [
                        {
                            "name": "feeRecipientType",
                            "type": "radio",
                            "options": [
                                {
                                    "label": "Address",
                                    "value": "ADDRESS"
                                },
                                {
                                    "label": "Platform User",
                                    "value": "USER"
                                }
                            ],
                            "stacked": false,
                            "required": "Fee recipient is required"
                        }
                    ]
                },
                {
                    "label": " ",
                    "fields": [
                        {
                            "conditions": [
                                "feeRecipientType:ADDRESS"
                            ],
                            "name": "feeAddress",
                            "placeholder": "Fee recipient address",
                            "required": "Fee recipient address is required"
                        },
                        {
                            "async": true,
                            "conditions": [
                                "feeRecipientType:USER"
                            ],
                            "defaultOptions": true,
                            "endpoint": "https://run.mocky.io/v3/a7e06c66-251c-4ca9-a8ac-cac5284d21a0",
                            "name": "feeUser",
                            "type": "reactSelect",
                            "placeholder": "Fee recipient",
                            "required": "Fee recipient user is required"
                        }
                    ],
                    "divider": true
                }
            ],
            "title": "Copyrights"
        },
        {
            "rows": [
                {
                    "fields": [
                        {
                            "name": "terms",
                            "type": "checkbox",
                            "options": [
                                {
                                    "label": "I have read and accept the terms of usage.",
                                    "value": true
                                }
                            ],
                            "required": "You must accept terms of usage"
                        }
                    ]
                },
                {
                    "fields": [
                        {
                            "name": "owner",
                            "type": "checkbox",
                            "options": [
                                {
                                    "label": "I am the copyright holder of that Image that I upload and / or I am legal representative of that copyright holder.",
                                    "value": true
                                }
                            ],
                            "required": "You must be the copyright holder / legal representative"
                        }
                    ]
                }
            ],
            "title": "Review and finalize"
        }
    ]
}