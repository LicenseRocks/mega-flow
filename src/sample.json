{
    "steps": [
        {
            "rows": [
                {
                    "label": "Cover",
                    "fields": [
                        {
                            "accept": "image/*",
                            "name": "cover",
                            "type": "fileUpload",
                            "multiple": false,
                            "required": "You must upload image cover"
                        }
                    ],
                    "hint": "Supported file types: image/* (jpg, png, jpeg) - Max size: 2MB",
                    "labelAlign": "start",
                    "labelGutter": true
                },
                {
                    "label": "Cover Storage Method",
                    "fields": [
                        {
                            "name": "storageOption",
                            "type": "radio",
                            "options": [
                                {
                                    "label": "Centralized Storage (AWS S3)",
                                    "value": "s3"
                                },
                                {
                                    "label": "Permanent Storage (Arweave)",
                                    "value": "arweave"
                                }
                            ],
                            "stacked": false,
                            "defaultValue": "s3"
                        }
                    ],
                    "divider": "Divider",
                    "hint": "Difference between Centerialized and Permanent storage"
                },
                {
                    "label": "Music Video",
                    "fields": [
                        {
                            "accept": "video/*",
                            "name": "video",
                            "type": "fileUpload",
                            "multiple": false,
                            "required": "You must upload video"
                        }
                    ],
                    "hint": "Supported file types: video/* (mp4, mpeg, webm) - Max size: 100MB",
                    "labelAlign": "start",
                    "labelGutter": true
                },
                {
                    "label": "Video Storage Method",
                    "fields": [
                        {
                            "name": "videoStorageOption",
                            "type": "radio",
                            "options": [
                                {
                                    "label": "Centralized Storage (AWS S3)",
                                    "value": "s3"
                                },
                                {
                                    "label": "Permanent Storage (Arweave)",
                                    "value": "arweave"
                                }
                            ],
                            "stacked": false,
                            "defaultValue": "s3"
                        }
                    ],
                    "hint": "Difference between Centerialized and Permanent storage"
                },
                {
                    "label": "Video Downloadable",
                    "fields": [
                        {
                            "name": "videoDownloadable",
                            "type": "toggleSwitch"
                        }
                    ]
                },
                {
                    "message": "If you specify the video as \"Downloadable\", the buyer has can download the video after purchasing it."
                }
            ],
            "title": "Upload assets"
          },
          {
            "rows": [
                {
                    "label": "Title",
                    "fields": [
                        {
                            "name": "title",
                            "required": "Name is required",
                            "placeholder": "Name of your listed Video"
                        }
                    ]
                },
                {
                    "label": "Description",
                    "fields": [
                        {
                            "name": "description",
                            "placeholder": "Music video description"
                        }
                    ]
                },
                {
                    "divider": true,
                    "label": "Credit Line",
                    "fields": [
                        {
                            "name": "creditLine",
                            "placeholder": "Music video credit line"
                        }
                    ]
                },
                {
                    "divider": true,
                    "label": "Amount",
                    "fields": [
                        {
                            "name": "amountType",
                            "type": "radio",
                            "options": [
                                {
                                    "label": "Unique",
                                    "value": "unique"
                                },
                                {
                                    "label": "Limited",
                                    "value": "limited"
                                },
                                {
                                    "label": "Unlimited",
                                    "value": "unlimited"
                                }
                            ],
                            "defaultValue": "unique"
                        },
                        {
                            "conditions": [
                                "amountType:limited"
                            ],
                            "min": 2,
                            "max": 100,
                            "name": "amount",
                            "type": "number",
                            "required": "Amount is required",
                            "placeholder": "Amount (2-100)"
                        }
                    ],
                    "hint": "Unique: 1, Limited: 2-100, Unlimited: > 100"
                },
                {
                    "divider": true,
                    "label": "Price",
                    "fields": [
                        {
                            "min": "0.01",
                            "name": "price",
                            "type": "price",
                            "required": "Price is required",
                            "currencies": [
                                {
                                    "sign": "€",
                                    "label": "EUR (€)",
                                    "value": "eur"
                                }
                            ],
                            "placeholder": "Price"
                        }
                    ]
                },
                {
                    "label": "Unlockable content",
                    "fields": [
                        {
                            "name": "secretPhrase",
                            "placeholder": "Unlockable content"
                        }
                    ],
                    "hint": "Value of this field would be visible only to owners"
                }
            ],
            "title": "Specify meta-data"
          },
        {
            "rows": [
                {
                    "fields": [
                        {
                            "name": "terms",
                            "type": "checkbox",
                            "options": [
                                {
                                    "label": "I have read and accept the terms of usage.",
                                    "value": true
                                }
                            ],
                            "required": "You must accept terms of usage"
                        }
                    ]
                },
                {
                    "fields": [
                        {
                            "name": "owner",
                            "type": "checkbox",
                            "options": [
                                {
                                    "label": "I am the copyright holder of that Music video that I upload and / or I am legal representative of that copyright holder.",
                                    "value": true
                                }
                            ],
                            "required": "You must be the copyright holder / legal representative"
                        }
                    ]
                }
            ],
            "title": "Review and finalize"
        }
    ]
}