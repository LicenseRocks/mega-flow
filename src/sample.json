{
    "title": "MyForm",
    "steps": [
      {
        "title": "Personal information",
        "rows": [
          {
            "label": "Full name",
            "inputs": [
              {
                "defaultValue": "Majid",
                "name": "firstName",
                "placeholder": "First name",
                "type": "input"
              },
              {
                "name": "lastName",
                "placeholder": "Last name",
                "required": "Last name is required",
                "type": "input"
              }
            ]
          },
          {
            "label": "Role",
            "inputs": [
              {
                "name": "role",
                "placeholder": "Role",
                "type": "select",
                "options": [
                  {
                    "value": "",
                    "label": "Please choose"
                  },
                  {
                    "value": "buyer",
                    "label": "Buyer"
                  },
                  {
                    "value": "seller",
                    "label": "Seller"
                  }
                ]
              }
            ]
          },
          {
            "label": "ID",
            "inputs": [
              {
                "name": "idFile",
                "required": "You must upload your id card",
                "type": "fileUpload"
              }
            ]
          }
        ]
      },
      {
        "title": "More information",
        "rows": [
          {
            "label": "Marriage status",
            "inputs": [
              {
                "name": "status",
                "type": "radio",
                "options":[
                  {
                    "value": "single",
                    "label": "Single"
                  },
                  {
                    "value": "married",
                    "label": "Married"
                  }
                ]
              }
            ]
          },
          {
            "label": "Category",
            "inputs": [
              {
                "name": "category",
                "type": "checkbox",
                "options":[
                  {
                    "value": "first",
                    "label": "First"
                  },
                  {
                    "value": "second",
                    "label": "Second"
                  }
                ]
              }
            ]
          },
          {
            "label": "Save?",
            "inputs": [
              {
                "name": "save",
                "type": "toggleSwitch"
              }
            ]
          }
        ]
      },
      {
        "title": "Recurring information",
        "recurring": true,
        "name": "recurring",
        "rows": [
          {
            "label": "Name",
            "inputs": [
              {
                "name": "name",
                "placeholder": "Name",
                "required": "Name is required",
                "type": "input"
              }
            ]
          },
          {
            "label": "Title",
            "inputs": [
              {
                "name": "title",
                "placeholder": "Title",
                "type": "input"
              }
            ]
          }
        ]
      }
    ]
  }